generator client {
  provider             = "prisma-client-py"
  interface            = "asyncio"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TodoItem {
  id          String   @id @default(cuid())
  title       String
  done        Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
